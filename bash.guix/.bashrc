emacs_daemon() {
    local pid;
    local server_name="$1";
    local LOG_FILE="/tmp/emacs_daemon_start.log"
    [[ -z "$server_name" ]] && return;
    pid=$(ps aux | grep -F "emacs --daemon=${name}" | grep -v grep | head -n 1)

    if [[ -z "$pid" ]]
    then
        emacs --daemon="${name}" >"$LOG_FILE" 2>&1 &
        pid=$!
        #echo -n "$pid" >"$pid_file"
        disown $pid
    fi
}

